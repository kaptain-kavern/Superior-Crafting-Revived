			<soundDispense>DispensePaste</soundDispense>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<startElectricalFires>true</startElectricalFires>
				<basePowerConsumption>200</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<size>(2,1)</size>
		<costList>
			<SteelBar>50</SteelBar>
			<Glass>20</Glass>
			<Component>3</Component>
		</costList>
		<socialPropernessMatters>true</socialPropernessMatters>
		<interactionCellOffset>(1,0,1)</interactionCellOffset>
		<hasInteractionCell>true</hasInteractionCell>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>Misc</designationCategory>
		<staticSunShadowHeight>0.75</staticSunShadowHeight>
		<constructEffect>ConstructMetal</constructEffect>
		<researchPrerequisites><li>FoodSynthesizer</li></researchPrerequisites>
	</ThingDef>
	
	
<ThingDef ParentName="BuildingBase">
    <defName>Hopper</defName>
    <label>synthesizer hopper</label>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Things/Building/SCMisc/Hopper</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <rect>(0.05,0.1,0.9,0.9)</rect>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.5</fillPercent>
    <pathCost>70</pathCost>
    <building>
      <fixedStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>FoodRaw</li>
          </categories>
          <disallowedSpecialFilters>
            <li>AllowPlantFood</li>
          </disallowedSpecialFilters>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>FoodRaw</li>
          </categories>
          <exceptedThingDefs>
            <li>Human_Meat</li>
          </exceptedThingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <castEdgeShadows>true</castEdgeShadows>
    <statBases>
      <WorkToMake>450</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Holds resources for use by machines like nutrient paste dispensers.</description>
    <costList>
      <SteelBar>15</SteelBar>
    </costList>
    <tickerType>Never</tickerType>
    <rotatable>true</rotatable>
    <neverMultiSelect>true</neverMultiSelect>
    <designationCategory>Production</designationCategory>
    <staticSunShadowHeight>0.3</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <placeWorkers>
      <li>PlaceWorker_NextToHopperAccepter</li>
    </placeWorkers>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites><li>FoodSynthesizer</li></researchPrerequisites>
</ThingDef>
	
  <ThingDef ParentName="BuildingBase">
    <DefName>ElectricCrematorium</DefName>
    <label>electric crematorium</label>
    <ThingClass>Building_WorkTable_HeatPush</ThingClass>
    <Description>Cremates corpses. Electrically-powered.</Description>
    <graphicData>
      <texPath>Things/Building/Production/Crematorium</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,2)</drawSize>
      <shadowData>
        <volume>(2.7,1,1.8)</volume>
      </shadowData>
      <damageData>
        <rect>(0.3,0.1,2.4,1.8)</rect>
      </damageData>
    </graphicData>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>70</costStuffCount>
    <costList>
      <SteelBar>20</SteelBar>
      <Component>2</Component>
    </costList>
    <AltitudeLayer>Building</AltitudeLayer>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToMake>4500</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>0</Flammability>
      <Cleanliness>-20</Cleanliness>
    </statBases>
    <Size>(3,2)</Size>
    <DesignationCategory>Production</DesignationCategory>
    <fillPercent>1</fillPercent>
    <Passability>Impassable</Passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>CremateCorpse</li>
      <li>BurnApparel</li>
      <li>BurnDrugs</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>250</basePowerConsumption>
        <startElectricalFires>true</startElectricalFires>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(217,112,33,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>15</heatPerSecond>
      </li>
    </comps>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <heatPerTickWhileWorking>0.6</heatPerTickWhileWorking>
    </building>
    <researchPrerequisites><li>Cremation</li></researchPrerequisites>
    <designationHotKey>Misc5</designationHotKey>
  </ThingDef>
	
