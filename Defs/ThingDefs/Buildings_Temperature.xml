<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>Campfire</defName>
		<label>campfire</label>
		<description>A temporary heat source which burns for a few days. It may be used to cook simple meals anywhere, but as with all heat sources, it must be placed indoors so it has a closed space to heat.</description>    
		<thingClass>Building_Campfire</thingClass>
		<category>Building</category>
		<graphicData>
			<texPath>Things/Building/Misc/Campfire</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawRotated>false</drawRotated>
		</graphicData>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<constructEffect>ConstructDirt</constructEffect>
		<tickerType>Normal</tickerType>
		<drawerType>RealtimeOnly</drawerType>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>200</WorkToMake>
			<Flammability>0</Flammability>
		</statBases>
		<selectable>true</selectable>
		<size>(1,1)</size>
		<costList>
			<WoodLog>5</WoodLog>
		</costList>
		<soundImpactDefault>BulletImpactGround</soundImpactDefault>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<placeWorkers>
			<li>PlaceWorker_Heater</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<comps>
			<li>
				<compClass>CompGlower</compClass>
				<glowRadius>10</glowRadius>
				<glowColor>(252,187,113,0)</glowColor>
			</li>
			<li>
				<compClass>CompHeatPusher</compClass>
				<heatPerSecond>21</heatPerSecond>
				<heatPushMaxTemperature>28</heatPushMaxTemperature>
			</li>
			<li>
				<compClass>CompGatherSpot</compClass>
			</li>
			<li>
				<compClass>CompLifespan</compClass>
				<lifespanTicks>60000</lifespanTicks>
			</li>
		</comps>
		<designationCategory>Temperature</designationCategory>
		<rotatable>true</rotatable>
		<designationHotKey>I</designationHotKey>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<deconstructible>false</deconstructible>
		</building>
	</ThingDef>


	<ThingDef ParentName="BuildingBase">
		<defName>Heater</defName>
		<label>heater</label>
		<thingClass>Building_Heater</thingClass>
		<graphicData>
			<texPath>Things/Building/Misc/TempControl/Heater</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowInfo>
				<basewidth>0.5</basewidth>
				<baseHeight>0.5</baseHeight>
				<tallness>1.0</tallness>
			</shadowInfo>
		</graphicData>
		<altitudeLayer>BuildingTall</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>40</pathCost>
		<castEdgeShadows>false</castEdgeShadows>
		<rotatable>false</rotatable>
		<fillPercent>0.4</fillPercent>
		<statBases>
			<WorkToMake>1875</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<tickerType>Rare</tickerType>
		<description>An electrical device that converts electricity into heat. It can automatically turn itself on or off to reach a specific target temperature.</description>
		<size>(1,1)</size>
		<costList>
			<SteelBar>75</SteelBar>
		</costList>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<placeWorkers>
			<li>PlaceWorker_Heater</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<comps>
			<li>
				<compClass>CompPowerTrader</compClass>
				<startElectricalFires>true</startElectricalFires>
				<soundPowerOn>PowerOnSmall</soundPowerOn>
				<soundPowerOff>PowerOffSmall</soundPowerOff>
				<basePowerConsumption>100</basePowerConsumption>
			</li>
			<li>
				<compClass>CompTempControl</compClass>
				<energyPerSecond>21</energyPerSecond>
			</li>
			<li>
				<compClass>CompGlower</compClass>
				<glowRadius>3</glowRadius>
				<glowColor>(255,150,100,0)</glowColor>
			</li>
		</comps>
		<designationCategory>Temperature</designationCategory>
		<researchPrerequisites>PowerI</researchPrerequisites>
	</ThingDef>
	
	
