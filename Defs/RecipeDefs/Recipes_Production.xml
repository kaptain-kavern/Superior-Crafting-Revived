		<soundWorking>Recipe_Smelt</soundWorking>
	    <workAmount>1200</workAmount>
	    <ingredients>
	    	<li>
	    		<filter>
	    			<categories>
						<li>StoneChunks</li>
					</categories>
	    		</filter>
	    		<count>1</count>
	    	</li>
	    </ingredients>
	    <fixedIngredientFilter>
	    	<categories>
