<!--====================== Recipes (Handcrafted) ==========================-->

	<RecipeDef>
		<defName>MakeWoodPlanks_Hand</defName>
    	<label>make wood planks</label>
		<description>Cuts 10 logs into 15 wood planks by hand. Quite slow.</description>
		<jobString>Making wood planks.</jobString>
	    <workSpeedStat>StonecuttingSpeed</workSpeedStat>
	    <effectWorking>MakeWoodPlanks_Hand</effectWorking>
		<soundWorking>Recipe_MakeWoodPlanks_Hand</soundWorking>
	    <workAmount>1200</workAmount>
	    <targetCountAdjustment>5</targetCountAdjustment>
	    <ingredients>
	    	<li>
	    		<filter>
	    			<thingDefs>
	    				<li>WoodLog</li>
	    			</thingDefs>
	    		</filter>
	    		<count>10</count>
	    	</li>
	    </ingredients>
	    <fixedIngredientFilter>
	    	<thingDefs>
	    		<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<WoodPlank>15</WoodPlank>
		</products>
		<workSkill>Crafting</workSkill>
		<recipeUsers>
			<li>TableSawmillHand</li>
		</recipeUsers>
	</RecipeDef>

