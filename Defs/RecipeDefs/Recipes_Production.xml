	<RecipeDef>
		<defName>MakeSand_Hand</defName>
    	<label>make sand</label>
		<description>Grinds 1 stone chunk into 15 sand by hand. Quite slow.</description>
		<jobString>Making sand.</jobString>
	    <workSpeedStat>StonecuttingSpeed</workSpeedStat>
	    <effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
	    <workAmount>1200</workAmount>
	    <ingredients>
	    	<li>
	    		<filter>
	    			<categories>
						<li>StoneChunks</li>
					</categories>
	    		</filter>
	    		<count>1</count>
	    	</li>
	    </ingredients>
	    <fixedIngredientFilter>
	    	<categories>
	    		<li>StoneChunks</li>
	    	</categories>
